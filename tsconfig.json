{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "declaration": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "skipLibCheck": true
  },
  "exclude": [
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
